<div id="nh-panel" class="nh-panel">
    <div id="nh-panel-inner">
        <div id="nh-mode-switcher">
            <div id="nh-mode-switcher-inner">
                <input id="nh-mode-switcher-preview-input" type="checkbox">
                <label id="nh-mode-switcher-preview"  for="nh-mode-switcher-preview-input" title="Preview">
                    <i class="eicon" aria-hidden="true" title="Hide Panel"></i>
                </label>
            </div>
        </div>

        <header id="nh-panel-header-wrapper">
            <div id="nh-panel-header">
                <div id="nh-panel-header-title">
                    NH Build Layout
                </div>

                <div id="nh-panel-header-add-button" class="nh-header-button">
                    <i class="nh-icon eicon-apps tooltip-target" aria-hidden="true" data-tooltip="Widgets Panel"></i>
                </div>
            </div>
        </header>

        <main id="nh-panel-content-wrapper" class="ps ps--active-y">
            <div id="nh-panel-page-elements">
                <div id="nh-panel-elements-navigation" class="nh-panel-navigation">
                    <div class="nh-component-tab nh-panel-navigation-tab nh-active" data-tab="categories">
                        Elements
                    </div>
                    <div class="nh-component-tab nh-panel-navigation-tab" data-tab="global">
                        Global
                    </div>
                </div>

                <div id="nh-panel-elements-search-area">
                    <div id="nh-panel-elements-search-wrapper">
                        <label for="nh-panel-elements-search-input" class="screen-reader-text">
                            Search Widget:
                        </label>
                        <input type="search" id="nh-panel-elements-search-input" placeholder="Search Widget..." autocomplete="off">
                        <i class="eicon-search-bold" aria-hidden="true"></i>
                    </div>
                </div>

                <div id="nh-panel-elements-wrapper">
                    <div id="nh-panel-elements-categories">
                        <div id="nh-panel-categories">
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer id="nh-panel-footer">
            <nav id="nh-panel-footer-tools">
                <div id="nh-panel-footer-settings" class="nh-panel-footer-tool nh-leave-open tooltip-target" data-tooltip="Settings" original-title="">
                    <i class="eicon-cog" aria-hidden="true"></i>
                    <span class="nh-screen-only">Page Settings</span>
                </div>

                <div id="nh-panel-footer-navigator" class="nh-panel-footer-tool tooltip-target" data-tooltip="Navigator" original-title="">
                    <i class="eicon-navigator" aria-hidden="true"></i>
                    <span class="nh-screen-only">Navigator</span>
                </div>

                <div id="nh-panel-footer-history" class="nh-panel-footer-tool nh-leave-open tooltip-target" data-tooltip="History" original-title="">
                    <i class="eicon-history" aria-hidden="true"></i>
                    <span class="nh-screen-only">History</span>
                </div>

                <div id="nh-panel-footer-responsive" class="nh-panel-footer-tool nh-toggle-state">
                    <i class="eicon-device-responsive tooltip-target" aria-hidden="true" data-tooltip="Responsive Mode" original-title=""></i>
                    <span class="nh-screen-only">
                        Responsive Mode     
                    </span>
                </div>

                <div id="nh-panel-footer-saver-preview" class="nh-panel-footer-tool tooltip-target" data-tooltip="Preview Changes" original-title="">
                    <span id="nh-panel-footer-saver-preview-label">
                        <i class="eicon-preview-medium" aria-hidden="true"></i>
                        <span class="nh-screen-only">
                            Preview Changes
                        </span>
                    </span>
                </div>

                <div id="nh-panel-footer-saver-publish" class="nh-panel-footer-tool">
                    <button id="nh-panel-saver-button-publish" class="nh-button nh-button-success">
                        <span class="nh-state-icon">
                            <i class="eicon-loading eicon-animation-spin" aria-hidden="true"></i>
                        </span>
                        <span id="nh-panel-saver-button-publish-label">
                            Update
                        </span>
                    </button>
                </div>
            </nav>
        </footer>
    </div>
</div>